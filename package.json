{
  "name": "svelte-breakpoint-badge",
  "version": "0.0.1",
  "description": "A Svelte component for displaying Tailwind breakpoint indicators during development",
  "author": "firdausai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/svelte-breakpoint-badge"
  },
  "keywords": [
    "svelte",
    "breakpoint",
    "tailwind",
    "dev-tools"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.47.1",
    "@sveltejs/package": "^2.5.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.14",
    "publint": "^0.3.14",
    "svelte": "^5.41.0",
    "svelte-check": "^4.3.3",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.10"
  }
}
